
# --- LILITH INTERFACE HOOKS ---
# Muda o t√≠tulo da janela automaticamente ao invocar a Lilith
function set_window_title() {
  echo -ne "\033]0;$1\007"
}

# Executado antes de cada comando
preexec() {
  # Se o comando come√ßar com "gemini" ou "Lilith"
  if [[ "$1" == gemini* ]] || [[ "$1" == Lilith* ]]; then
    set_window_title "üíé Lilith Interface"
  fi
}

# Executado depois de cada comando (reseta)
precmd() {
  # Reseta para o diret√≥rio atual ou shell padr√£o
  set_window_title "foot: ${PWD##*/}"
}
